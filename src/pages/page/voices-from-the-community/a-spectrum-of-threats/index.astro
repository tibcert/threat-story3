---
import BannerLeftText from "../../../../components/BannerLeftText.astro"
import BannerRightText from "../../../../components/BannerRightText.astro"
import PageHeading from "../../../../components/pageHeading.astro"
import Pagination from "../../../../components/Pagination.astro"
import Default from "../../../../layouts/Default.astro"


const title ="A SPECTRUM OF THREATS"
const nextTitle = "The Community Responds"
const nexturl = "/page/the-community-responds/"
const prevTitle = "Voices From The Community"
const prevurl = "/page/voices-from-the-community/"
---
<Default title={title}>
	<div class=" flex flex-col snap-mandatory h-full snap-y w-screen items-center bg-slate-900 justify-around">
		<PageHeading {title}>
			<p slot="link" class="text-slate-400 text-2xl text-center p-5  m-auto z-10" >
				<a href="/">Home</a><span class="px-2">/</span><a href="/page/voices-from-the-community/"> Voices From The Community</a>
				<span class="px-2">/</span><a>{title}</a>
			</p>
			<div slot="subheading" class="text-white  text-center text-3xl pb-20 sm:w-full md:w-1/2 lg:w-full flex justify-center"> 
				<p class="w-full px-5 md:w-1/2 z-10">
					This section provides an overview of the digital threats Tibetan organizations have experienced, which demonstrates how the threats evolve and adapt overtime. 
				</p>
			</div>
		</PageHeading>
		<section class="content bg-slate-900 w-full text-md font-oswald text-slate-300 leading-relaxed ">
			<!-- <div class="mx-auto w-4/5 p-10">
			</div>    -->
	
		</section>
		<BannerLeftText title="Impersonation And Trust" link="/page/voices-from-the-community/a-spectrum-of-threats/impersonation-&-trust" img="/images/whatsapp.jpg ">
        </BannerLeftText>
		
        <BannerRightText title="Poisoning The Well: Using Tibetan Websites Against The Community" link="/page/voices-from-the-community/a-spectrum-of-threats/poisoning-the-well/" img="/images/Press-2.jpg">
        </BannerRightText>

		<BannerLeftText title="Digital Attacks As Censorship" link="/page/voices-from-the-community/a-spectrum-of-threats/digital-attacks-as-censorship" img="/images/DSC01190-min_1.jpg ">
        </BannerLeftText>

		<BannerRightText title="The Spy In Your Pocket" link="/page/voices-from-the-community/a-spectrum-of-threats/the-spy-in-your-pocket/" img="/images/TenzingChoedhak.jpg">
        </BannerRightText>
		
       

        <Pagination next={nexturl} nextTitle={nextTitle} prev={prevurl} prevTitle={prevTitle} />

      

	</div>

	
</Default>