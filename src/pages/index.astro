import Default from "../layouts/Default.astro"

---
<Default title="Home">	
	<div class="container flex flex-col snap-mandatory h-full snap-y  w-screen relative">
		<section id="home" class="snap-start w-lvw bg-slate-600 h-lvh flex flex-col items-center justify-center">
			
			<div class="box"></div>
			<img src="/tibcert-logo-svg-on-dark.svg" alt="test" class="w-96">
