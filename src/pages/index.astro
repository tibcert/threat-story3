---
import Default from "../layouts/Default.astro"
import Hero from '../components/Heropage.astro'

---
<Default title="Home">	
	<div class="container flex flex-col snap-mandatory h-full snap-y  w-screen relative">
		<Hero/>
	
		<section id="intro" class="snap-start w-lvw bg-slate-300 h-lvh flex flex-col">
			<div class="h-1/2 bg-black flex justify-between overflow-hidden ">
				<h1 class="titleLeft font-bold text-9xl text-white content-center p-20" transition:name="title1"><a href="page/introduction">Introduction</a></h1><br>
				<div class="w-1/4">
					<img class=" img object-cover" src="/images/horse.jpg">
				</div>	
			</div>
			<div class="h-1/2 bg-slate-900  flex justify-between ">
				<img class="h-full bg-red-500 w-1/3 z-10" src="/images/bw.jpg">
				<h1 class="titleRight font-bold text-9xl text-white content-center p-20 text-right z-0" transition:name="title2"> <a href="page/the-tibet-movement-goes-online">The Tibet Movement Goes Online</a></h1><br>		
			</div>
		</section>
	
		<section id="early-digital" class="snap-start w-lvw bg-slate-300 h-lvh flex flex-col">
			<div class="h-1/2 bg-black flex justify-between overflow-hidden">
				<h1 class="titleLeft font-bold text-9xl text-white content-center p-20 z-0" transition:name="title3"><a href="page/early-digital-threats">Early Digital Threats Against The Community</a></h1><br>
				<img class=" h-full bg-red-500 w-1/3 z-10" src="/images/bw.jpg">	
			</div>
			<div class="h-1/2 bg-slate-900  flex justify-between">
				<div class="h-full w-1/3">
					<div class="text-slate-500  p-20 text-5xl">
						<p class="hover:text-slate-400">A Movement Under Surveillance</p>
						<p class="hover:text-slate-400">Impersonation & Trust</p>
						<p class="hover:text-slate-400">Poisoning The Well</p>
						<p class="hover:text-slate-400">Attempt To Silence The Voice Of Tibet</p>
						<p class="hover:text-slate-400">The Spy In Your Pocket</p>
					</div>
				</div>
				<h1 class="titleRight font-bold text-9xl text-white content-center p-20 text-right" transition:name="title4"><a href="page/on-the-frontlines">On The Frontlines</a></h1>	
			</div>
		</section>
		<section id="community" class="snap-start w-lvw bg-slate-300 h-lvh flex flex-col">
			<div class="h-1/2 bg-black flex justify-between z-10 ">
				<h1 class="titleLeft font-bold text-9xl text-white content-center p-20"><a href="page/the-community-responds" transition:name="title5">The Community Responds</a></h1><br>
				<img class="h-full bg-red-500 w-1/3 z-0" src="/images/bw.jpg">	
			</div>
			<div class="h-1/2 bg-slate-900  flex justify-between">
				
			</div>
		</section>

	</div>
