---
import Default from "../layouts/Default.astro"
import Hero from '../components/Heropage.astro'
import ArrowOpen from '../icons/arrow-open.astro'

---
<Default title="Home">	
	<div class="container flex flex-col snap-mandatory h-full snap-y  w-screen relative">
		<Hero/>
	
		<section id="intro" class="snap-start w-lvw bg-slate-300 h-lvh flex flex-col">
			<div class="h-1/2 bg-black flex justify-between overflow-hidden ">
				<h1 class="titleLeft font-bold text-9xl bg-gradient-to-r from-slate-700 to-slate-800 via-slate-200 hover:to-slate-400   bg-clip-text text-transparent content-center p-20" transition:name="title1"><a href="page/introduction">Introduction</a></h1><br>
				<div class="w-1/4">
					<img class=" img object-cover" src="/images/horse.jpg">
				</div>	
			</div>
			<div class="h-1/2 bg-slate-900  flex justify-between ">
				<img class="h-full bg-red-500 w-1/3 z-10" src="/images/bw.jpg">
				<h1 class="titleRight font-bold text-9xl text-white content-center p-20 text-right z-0" transition:name="title2"> <a href="page/the-tibet-movement-goes-online"><span class="p-1 rounded-md text-2xl text-slate-400">2.</span>The Tibet Movement Goes Online</a></h1><br>		
			</div>
		</section>
	
		<section id="early-digital" class="snap-start w-lvw bg-slate-300 h-lvh flex flex-col">
			<div class="h-1/2 bg-black flex justify-between overflow-hidden">
				<h1 class="titleLeft font-bold lg:text-8xl md:text-7xl  text-white content-center p-20 z-0" transition:name="title3"><a href="page/early-digital-threats"><span class="p-1 rounded-md text-2xl text-slate-400">3.</span>Early Digital Threats Against The Community</a></h1><br>
				<img class=" h-full bg-red-500 w-1/3 z-10" src="/images/bw.jpg">	
			</div>
			<div class="h-1/2 bg-slate-900  flex justify-between">
				<div class="h-full w-2/3">
					<div class="text-slate-500  p-20 text-5xl md:text-4xl">
						<p class="hover:text-slate-400 py-1 hover:translate-x-2 transition duration-75">
							<a href="page/on-the-frontline/a-movement-under-surveillance" class="flex items-center " transition:name="heading1"><ArrowOpen/>A Movement Under Surveillance</a>
						</p>
						<p class="hover:text-slate-400 py-1 hover:translate-x-2 transition duration-75"> 
							<a href="page/on-the-frontline/impersonation-&-trust" class="flex items-center" transition:name="heading2"><ArrowOpen/>Impersonation & Trust</a>
						</p>
						<p class="hover:text-slate-400 py-1 hover:translate-x-2  transition duration-75">
							<a href="page/on-the-frontline/poisoning-the-well" class="flex items-center" transition:name="heading3"><ArrowOpen/>Poisoning The Well</a>
						</p>
						<p class="hover:text-slate-400 py-1 hover:translate-x-2 transition duration-75">
							<a href="page/on-the-frontline/attempt-to-silence-voice-of-tibet" class="flex items-center " transition:name="heading4"><ArrowOpen/>Attempt To Silence The Voice Of Tibet</a>
						</p>
						<p class="hover:text-slate-400 py-1 hover:translate-x-2 transition duration-75 ">
							<a href="page/on-the-frontline/spy-in-your-pocket" class="flex items-center " transition:name="heading5"><ArrowOpen/>The Spy In Your Pocket</a>
						</p>
					</div>
				</div>
				<h1 class="titleRight font-bold text-9xl text-white content-center p-20 text-right" transition:name="title4"><a href="page/on-the-frontlines"><span class="p-1 rounded-md text-2xl text-slate-400">3.</span>On The Frontlines</a></h1>	
			</div>
		</section>
		<section id="community" class="snap-start w-lvw bg-slate-300 h-lvh flex flex-col">
			<div class="h-1/2 bg-black flex justify-between z-10 ">
				<h1 class="titleLeft font-bold text-9xl text-white content-center p-20"><a href="page/the-community-responds" transition:name="title5"><span class="p-1 rounded-md text-2xl text-slate-400">4.</span>The Community Responds</a></h1><br>
				<img class="h-full bg-red-500 w-1/3 z-0" src="/images/bw.jpg">	
			</div>
			<div class="h-1/2 bg-slate-900  flex justify-between">
				
			</div>
		</section>

	</div>
