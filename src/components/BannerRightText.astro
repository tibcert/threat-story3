---
const {title,link,img} = Astro.props;
---
<div class="h-1/3 bg-slate-900  flex justify-between items-center overflow-hidden">
    <img class=" bg-red-500 w-1/3 z-10" src={img}>
    
   <div class="p-20">
    <h1 class="titleRight font-bold text-9xl bg-gradient-to-r from-slate-700 to-slate-800 via-slate-200 hover:to-slate-400  bg-clip-text text-transparent content-center px-20  pr-20 text-right z-0 text-wrap " transition:name="title2"> 
        <a href={link} class="">{title}</a>
    </h1>
    
    <slot/>
   </div>
    
</div>