<figure class=" bg-slate-800 p-3 my-5 w-full md:w-4/5 mx-auto relative shadow-md border-2 border-slate-700 overflow-hidden md:flex md:flex-row  items-center" >
    <QuoteOpen/>
    <blockquote class="z-2 w-full"> 
        <div class=" relative z-10 testamonial text-sm md:text-xl font-normal italic text-slate-300 dark:text-white leading-relaxed text-left">
            <slot>
        </div> 
    </blockquote>
    <QuoteClose/>
    <figcaption class="relative  items-center mt-2 space-x-3 rtl:space-x-reverse z-10 md:w-72 flex md:flex-col justify-center w-full flex-row">
        <img class="w-20 h-20 md:w-44 md:h-44 rounded-full" src={img} alt="profile picture">
        <div class=" flex flex-col md:items-center items-start ">
            <cite class="pe-3 font-medium text-gray-200 text-lg  ">{person}</cite>
            <cite class="pe-3 text-sm text-gray-400 dark:text-gray-400 line-clamp-1 ">{title}</cite> 
        </div>
    </figcaption>
</figure>