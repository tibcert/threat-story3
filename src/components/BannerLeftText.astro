---
const {title,link,img} = Astro.props;
---

<div class="group h-1/3 bg-black flex justify-between overflow-hidden items-center ">
   <div class="p-15">
    <h1 class="titleLeft font-bold text-9xl md:text-8xl lg:text-9xl bg-gradient-to-r from-slate-700 to-slate-800 via-slate-200  hover:from-slate-200 hover:via-slate-300 hover:to-slate-900  bg-clip-text text-transparent content-center  z-10  px-20  [text-shadow:_2px_2px_0_rgb(0_0_0_/_30%)]" transition:name="title1">
        <a href={link}>{title}</a>
    </h1>
    <slot/>
   </div>
   
        <img class="img object-cover z-0 w-1/3 grayscale group-hover:grayscale-0" src={img}>
</div>