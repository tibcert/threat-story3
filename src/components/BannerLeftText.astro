---
const {title,link,img} = Astro.props;
---

<div class="h-1/3 bg-black flex justify-between overflow-hidden items-center ">
   <div class="p-15">
    <h1 class="titleLeft font-bold text-9xl bg-gradient-to-r from-slate-700 to-slate-800 via-slate-200 hover:to-slate-400  bg-clip-text text-transparent content-center  z-10  px-20" transition:name="title1">
        <a href={link}>{title}</a>
    </h1>
    <slot/>
   </div>
   
        <img class=" img object-cover z-0 w-1/3" src={img}>
</div>