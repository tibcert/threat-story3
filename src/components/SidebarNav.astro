---
import BurgerMenu from "../icons/burger-list-menu-navigation-svgrepo-com.astro"

const {title} = Astro.props;

---
<!-- drawer init and show -->
<div class="text-center  bottom-5 left-5 fixed z-40"  data-drawer-target="drawer-navigation" data-drawer-show="drawer-navigation" aria-controls="drawer-navigation">
    <button class=" text-white bg-slate-700/40 hover:bg-slate-800 focus:ring-4 focus:ring-blue-300  rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800  transition-transform" >
        <BurgerMenu />
    </button>
 </div>
 
 <!-- drawer component -->
 <div id="drawer-navigation" class="fixed top-0 left-0 z-40 w-1/2 h-screen p-4 overflow-y-auto transition-transform -translate-x-full bg-blue-900/50 backdrop-blur-md dark:bg-gray-800" tabindex="-1" aria-labelledby="drawer-navigation-label">
     <!-- <h5 id="drawer-navigation-label" class="text-base font-semibold text-gray-500 uppercase dark:text-gray-400">Menu</h5> -->
     <button type="button" data-drawer-hide="drawer-navigation" aria-controls="drawer-navigation" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-200 rounded-lg text-sm p-1.5 absolute top-2.5 end-2.5 inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" >
         <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
         <span class="sr-only">Close menu</span>
     </button>
   <div class="py-4 overflow-y-auto font-oswald uppercase text-2xl">
       <ul class=" text-white">
          <li class="py-2  ms-2">
            {title == "Introduction" ? 
            (<p  class="flex items-center p-2  group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Introduction</p>) : 
            (<a href="/page/introduction" class="">Introduction</a>)
            }  
          </li>
          <li class="py-2  ms-2">
            {title == "Background" ? 
            (<p  class="flex items-center p-2  group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">{title}</p>) : 
            (<a href="/page/background" class="">Background</a>)
            } 
             <ul>
                <li class="py-2 ms-4">
                    {title == "The Tibet Movement Goes Online" ? 
                    (<p  class="flex items-center   group text-slate-400 text-2xl border-l-4 px-2 border-x-yellow-500">The Tibet Movement Goes Online</p>) : 
                    (<a href="/page/background/the-tibet-movement-goes-online/" class="text-2xl">The Tibet Movement Goes Online</a>)
                    }
                <li class="py-2  ms-4 ">
                    {title == "Early Digital Threats Against The Community" ? 
                    (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Early Digital Threats Against The Community</p>) : 
                    (<a href="/page/background/early-digital-threats/">Early Digital Threats Against The Community</a>)
                    } 
             </ul>
          </li>
          <li class="py-2  ms-2">
                {title == "Voices From The Community" ? 
                (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500  ">Voices From The Community</p>) : 
                (<a href="/page/voices-from-the-community/" class="">Voices From The Community</a>)
                } 
             <ul>
                <li class="py-2 ms-4">
                    {title == "Spying During Pivotal Moments For The Tibet" ? 
                    (<p  class="flex items-center   group text-slate-400 text-2xl border-l-4 px-2 border-x-yellow-500 ">Spying During Pivotal Moments For The Tibet</p>) : 
                    (<a href="/page/voices-from-the-community/spying/" class="text-2xl">Spying During Pivotal Moments For The Tibet</a>)
                    } 
                    <ul class="ms-6">
                        <li class="py-2 ">
                            {title == "Surveillance, Harassment, And The 2008 Beijing Olympics" ? 
                                (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Surveillance, Harassment, And The 2008 Beijing Olympics</p>) : 
                                (<a href="/page/voices-from-the-community/spying/surveillance-harassment-&-2008-beihing-olympics">Surveillance, Harassment, And The 2008 Beijing Olympics</a>)
                                }
                        </li>
                        <li class="py-2 ">
                            {title == "Spying And Self Immolations In Tibet" ? 
                                (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Spying And Self Immolations In Tibet</p>) : 
                                (<a href="/page/voices-from-the-community/spying/spying-and-self-immolation-in-tibet/">Spying And Self Immolations In Tibet</a>)
                                }
                        </li>
                        <li class="py-2 ">
                            {title == "Spying On The Tibetan Movement During Covid" ? 
                                (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Spying On The Tibetan Movement During Covid</p>) : 
                                (<a href="/page/voices-from-the-community/spying/spying-on-the-tibetan-movement-during-covid">Spying On The Tibetan Movement During Covid</a>)
                                }
                        </li>
                    </ul>
                </li>
                <li class="py-2 ms-6">
                    {title == "A SPECTRUM OF THREATS" ? 
                    (<p  class="flex items-center   group text-slate-400 text-2xl border-l-4 px-2 border-x-yellow-500 ">A Spectrum Of Threats</p>) : 
                    (<a href="/page/voices-from-the-community/a-spectrum-of-threats" class="text-2xl">A Spectrum Of Threats</a>)
                    }
                    <ul class="ms-4">
                        <li class="py-2 ">
                            {title == "Impersonation & Trust" ? 
                             (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Impersonation & Trust</p>) : 
                             (<a href="/page/voices-from-the-community/a-spectrum-of-threats/impersonation-&-trust" class="">Impersonation & Trust</a>)
                            }
                        </li>
                        <li class="py-2 ">
                            {title == "Poisoning The Well: Using Tibetan Websites Against The Community" ? 
                             (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Poisoning The Well: Using Tibetan Websites Against The Community</p>) : 
                             (<a href="/page/voices-from-the-community/a-spectrum-of-threats/poisoning-the-well/" class="">Poisoning The Well: Using Tibetan Websites Against The Community</a>)
                            }
                        </li>
                        <li class="py-2 ">
                            {title == "Digital Attacks As Censorship" ? 
                            (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Digital Attacks As Censorship</p>) : 
                            (<a href="/page/voices-from-the-community/a-spectrum-of-threats/digital-attacks-as-censorship/" class="">Digital Attacks As Censorship</a>)
                           }
                        </li>
                        <li class="py-2 ">
                            {title == "Spy In Your Pocket" ? 
                            (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">Spy In Your Pocket</p>) : 
                            (<a href="/page/voices-from-the-community/a-spectrum-of-threats/the-spy-in-your-pocket/" class="">Spy In Your Pocket</a>)
                           }
                            <ul class="ms-6">
                                <li class="py-2 ">
                                    {title == "The Mobile Threats Emerge" ? 
                                    (<p  class="flex items-center   group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">The Mobile Threats Emerge</p>) : 
                                    (<a href="/page/voices-from-the-community/a-spectrum-of-threats/the-spy-in-your-pocket/mobile-threats-emerge/">The Mobile Threats Emerge</a>)
                                   }
                                </li>
                                <li class="py-2 ">
                                    {title == "One Click Away From Compromise" ? 
                                    (<p  class="flex items-center p-2  group text-slate-400 border-l-4 px-2 border-x-yellow-500 ">One Click Away From Compromise</p>) : 
                                    (<a href="/page/voices-from-the-community/a-spectrum-of-threats/the-spy-in-your-pocket/one-click-away-from-compromise/">One Click Away From Compromise</a>)
                                   }
                                </li>
                            </ul>
                        
                        </li>
                    </ul>
                </li>

             </ul>
          </li>
          <li class="py-2  ms-2">
            {title == "The Community Responds" ? 
            (<p  class="flex items-center  text-slate-400  whitespace-nowrap border-l-4 px-2 border-x-yellow-500 ">The Community Responds</p>) : 
            (<a href="/page/the-community-responds/" class="whitespace-nowrap ">The Community Responds</a>)
           }
          </li>

       </ul>
    </div>
 </div>
 